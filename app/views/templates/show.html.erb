<% title "Template" %>

<p>
  <strong>Name:</strong>
  <%=h @template.name %>
</p>
<p>
  <strong>User:</strong>
  <%=h @template.user_id %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @template.description %>
</p>

<p>
  <%= link_to "Edit", edit_template_path(@template) %> |
  <%= link_to "Destroy", @template, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", templates_path %>
</p>
