<%= error_messages_for :profile %>

<% form_for @profile do |f| %>

<div class="span-5">
  <p>
    <%= f.label "First Name" %><br />
    <%= f.text_field :firstname %>
  </p>
 </div>
 <div class="span-5 append-12 last">
     <p>
       <%= f.label "Last Name" %><br />
       <%= f.text_field :lastname %>
     </p>
 </div>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area :address, :cols => "45", :rows => "6" %>
  </p>
  <p>
    <%= f.label "Institution/Program" %><br />
    <%= f.text_field :institution, :class => "big" %>
  </p>
  <p>
    <%= f.label "Phone Number" %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p><%= f.submit "Submit" %></p>

<% end %>
