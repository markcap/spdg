<%= error_messages_for :article %>
<% form_for @article do |f| %>


  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  
  <div class="text_editor">
      <div id="<%= fckeditor_div_id('article', 'body') %>">
          <%= fckeditor_textarea( "article", "body", :width => 550, :height => 500 ) %>
      </div>
  </div>
 
  <p><%= f.submit "Submit" %></p>
<% end %>
