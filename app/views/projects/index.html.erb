<div class="news_title">Projects in SPDG Kansas </div> <br><br>

<div class="span-22">
    <% @goals.each do |g|%>
        <h4><%=spaces(2)%><%= g.description %></h4>
        
        <% if !g.projects.empty?%>
            <%g.projects.by_position.each do |p|%>
                <div id="project_box">
                    <div id="project_header">
                        <b><%= link_to p.name, p.website, :target => "new"%></b>
                    </div>
                    <div id="project_body">
                        <br>
                        <%= render :partial => 'public_project_info', :locals => {:p => p}%>
                                    <br>
                    </div>

                </div>    
                <br>
            <%end%>
        <%end%>
    <%end%>
</div>
