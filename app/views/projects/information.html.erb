<h3><%=@project.name%></h3>

<%= render "tabs"%>

<div class="span-20 my_project_body">
    <div class="right">
    <%=link_to image_tag("../images/icons/edit.gif"), edit_project_path(@project)%>
    </div>

    <%= render :partial => 'project_info', :locals => {:p => @project}%>
    
    <%if updatable(@project)%>
    <br>

            <%= link_to "Add Contact", new_project_contact_path(@project), :class => 'add_contact_link' %>
            <div id="add_contact_form" style="display:none;">
                <b> Add Contact</b> <br>
                <%= render 'contacts/form'%>
            </div>

    <%end%>
        
</div>