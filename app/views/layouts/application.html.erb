<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "SPDG Kansas") %></title>
    <%= stylesheet_link_tag 'spdg' %>

    <link rel="stylesheet" href="http://grant.spdgkansas.org/stylesheets/blueprint/screen.css" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="http://grant.spdgkansas.org/stylesheets/blueprint/print.css" type="text/css" media="print">	
    <!--[if lt IE 8]><link rel="stylesheet" href="http://grant.spdgkansas.org/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->
    
    <%= javascript_include_tag 'fckeditor/fckeditor' %>

    <%= yield(:head) %>
  </head>
  <body>
    
    <div class="container">
      
      <div id="logo" class="span-4">
      <%= link_to image_tag("/images/spgd-logo.png"), root_path%>
      </div>
      
      <div class="menu span-20 last">
        
        <div class="login">
          <%if logged_in?%>
            Logged in as <%=current_user.login%>
            <br>
            <%= link_to "Logout", logout_path%> | 
            <%= link_to "Info", profile_path(current_user.profile)%>
          <%else%>
            
            <div id="login_form">
              <% form_tag session_path do -%>
                Username: &nbsp;
                <%= text_field_tag 'login', @login %>&nbsp;&nbsp;

                Password: &nbsp;
                <%= password_field_tag 'password', nil %>
                <br>
                Remember me
                <%= check_box_tag 'remember_me', '1', @remember_me %>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= submit_tag 'Log in' %>
              <% end -%>
            </div>
              <div id="login_start">
                Reistered Users: <a href="#" class="login_link">Log In</a>
              </div>
            
          <%end%>
        </div>
        
        <div class="left">
          <%= image_tag("/images/menu_left_edge.png")%>
        </div>
        <ul>
          <li class="span-3">
            Goals
          </li>
          <li class="span-3">
            Projects
          </li>
          <li class="span-3">
            Goods
          </li>
        </ul>
      </div>
      
      <div id="spacer" class="span-24">
      </div>
      
      <div id="content" class="span-19 prepend-1">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
        
        <%= yield %>
      </div>
      <div id="sidebar" class="span-4 last">
        sidebar
      </div>
      
      
    </div>
  </body>
</html>
