<%= javascript_include_tag 'dataTables', 'survey_table'%>
<%= stylesheet_link_tag 'data_table'%>

<%= link_to "New Survey", new_survey_path %><%= spaces(18)%>
View Styles: <%= spaces(4)%>

<%= link_to "All Surveys", change_view_type_user_path(current_user, :type => 0), :class => 'surveys_all'%><%= spaces(4)%>|<%= spaces(4)%>
<%= link_to "Complete Only", change_view_type_user_path(current_user, :type => 1), :class => 'surveys_com'%><%= spaces(4)%>|<%= spaces(4)%>
<%= link_to "Incomplete Only", change_view_type_user_path(current_user, :type => 2), :class => 'surveys_inc'%>
<br><br>


  <%if current_user.survey_view_type && current_user.survey_view_type == 1 %>
    <script type='text/javascript'>
      jQuery(".surveys_com").addClass("highlighted_link")
    </script>
  <%elsif current_user.survey_view_type && current_user.survey_view_type == 2%>
  <script type='text/javascript'>
    jQuery(".surveys_inc").addClass("highlighted_link")
  </script>
  <%else%>
  <script type='text/javascript'>
    jQuery(".surveys_all").addClass("highlighted_link")
  </script>
  <%end%>
<%= render 'survey_table'%>